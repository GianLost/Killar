@using Microsoft.AspNetCore.Http;
@using System;
@model Posts

@{
    ViewData["Title"] = "Crie Sua Postagem";

    var postDate = DateTime.Now;
    var postAuthor = Context.Session.GetString("login");

}

<body class="text-center comunity-main p-4 mt-5">

    <main role="main" class="body-post img-fluid">

        <div class="row justify-content-md-center">

            <div class="jumbotron col-md-6 col-lg-6 col-sm-12">

                <div class="">

                    <form id="frmEditPost" asp-controller="Posts" asp-action="PostEdit" method="post">

                        <p>

                            <input value="@postDate" type="datetime" class="form-control btn-block hidden"
                                name="PostDate" asp-for="@Model.PostDate" readonly />
                            <input value="@postAuthor" type="text" class="form-control btn-block hidden" name="Author"
                                asp-for="@Model.Author" readonly />

                        </p>

                        <p>
                            <textarea class="form-control btn-block post-textarea"
                                placeholder="O que te passas no Rift??" asp-for="@Model.Content" cols="40" rows="13"
                                required></textarea>
                        </p>

                        <input class="form-control btn-block hidden" type="number" name="Id" value="@Model.Id"
                            asp-for="@Model.Id" readonly>
                        <input class="form-control btn-block hidden" type="number" name="UsersId"
                            value=@Context.Session.GetInt32("IdUser") asp-for="@Model.UsersId" readonly>

                        <button class="btn btn-outline-primary btn-lg mt-3 but-post" type="submit">Salvar
                            Alterações</button>

                    </form>

                </div>

            </div>

        </div>

    </main>

</body>
