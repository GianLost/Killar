@using Microsoft.AspNetCore.Http;
{

}
@model Users

@{
    ViewData["Title"] = "Seu Perfil";
}

<body class="text-center">

    <main role="main" class="p-5">

        <div class="container col-md-8 col-xl-8 col-lg-10 col-sm-12 offset-md-1">

            

                <form name="formuser" method="post" asp-controller="Users" asp-action="UserProfileEdit">

                    <h1 class=" text-center mb-4">Olá @Model.Name<span> Você está prestes a alterar seus dados!!</span></h1>



                    <hr class="mb-4 mt-3">

                    <img class="rounded-circle border-primary" src="../images/perfil.png" alt="Imagem de perfil">

                    <hr class="mb-4">

                    <div class="row">

                        <div class="col-md-6">

                            <label for="">Nome:</label>
                            <input placeholder="Seu Nome" asp-for="@Model.Name" type="text" class="form-control" required>

                            <label for="">Data de Nascimento:</label>
                            <input placeholder="Data de Nascimento" id="BirthDate" asp-for="@Model.BirthDate" type="date"
                            class="form-control" required>

                            <label for="">Nick Wr(aaaa#0000):</label>
                            <input placeholder="Nick Wr(aaaa#0000)" asp-for="@Model.LoginWr" type="text" class="form-control"
                            required>

                        </div>

                        <div class="col-md-6">

                            <label for="">Nick Name</label>
                            <input placeholder="Nick Name" asp-for="@Model.LoginName" type="text" class="form-control" required>

                            <label for="">Sua senha</label>
                            <input placeholder="Repita a senha" asp-for="@Model.Password" type="password" class="form-control"
                            required>

                            <label for="">Confirme a senha</label>
                            <input placeholder="Repita a senha" asp-for="@Model.CheckedPassword" type="password"
                            class="form-control" required>

                        </div>

                        <hr class="mb-4">

                    </div>

                    <div class="row ml-5">

                        <div class="col-md-5 d-block my-3">

                            <div class="mb-3">

                                <label asp-for="@Model.Elo" for="Elo">Elo Atual</label>

                                <select class="custom-select d-block w-100" asp-for="@Model.Elo" for="@Model.Elo" id="Elo" required>

                                    <option value="">Choose...</option>

                                    <option asp-for="@Model.Elo" for="@Model.Elo" value="Ferro">Ferro</option>
                                    <option asp-for="@Model.Elo" for="@Model.Elo" value="Bronze">Bronze</option>
                                    <option asp-for="@Model.Elo" for="@Model.Elo" value="Ouro">Ouro</option>
                                    <option asp-for="@Model.Elo" for="@Model.Elo" value="Platina">Platina</option>
                                    <option asp-for="@Model.Elo" for="@Model.Elo" value="Esmeralda">Esmeralda</option>
                                    <option asp-for="@Model.Elo" for="@Model.Elo" value="Diamante">Diamante</option>
                                    <option asp-for="@Model.Elo" for="@Model.Elo" value="Mestre">Mestre</option>
                                    <option asp-for="@Model.Elo" for="@Model.Elo" value="Grão-Mestre">Grão-Mestre</option>
                                    <option asp-for="@Model.Elo" for="@Model.Elo" value="Desafiante">Desafiante</option>

                                </select>

                                <div class="invalid-feedback">
                                    Please provide a valid state.
                                </div>

                            </div>

                        </div>

                        <div class="col-md-5 d-block my-3">

                            <div class="mb-3">

                                <label asp-for="@Model.Lane" for="@Model.Lane">Lane Principal</label>

                                <select class="custom-select d-block w-100" asp-for="@Model.Lane" for="@Model.Lane" id="Lane" required>

                                    <option value="">Choose...</option>

                                    <option asp-for="@Model.Lane" for="@Model.Lane" value="Suporte">Suporte</option>
                                    <option asp-for="@Model.Lane" for="@Model.Lane" value="AD Carry">AD Carry</option>
                                    <option asp-for="@Model.Lane" for="@Model.Lane" value="Mid Lane">Mid Lane</option>
                                    <option asp-for="@Model.Lane" for="@Model.Lane" value="Jungle">Jungle</option>
                                    <option asp-for="@Model.Lane" for="@Model.Lane" value="Top Lane">Top Lane</option>

                                </select>

                                <div class="invalid-feedback">
                                    Please provide a valid state.
                                </div>

                            </div>

                        </div>

                    </div>

                    <div class="col">

                        @if (Context.Session.GetInt32("type") == 0)
                        {
                            <div class=" mb-3">

                                <label asp-for="@Model.Tipo" for="@Model.Tipo">Selecione o Nível de Usuário</label>

                                <select class="custom-select d-block w-100" asp-for="@Model.Tipo" for="@Model.Tipo" id="Tipo" required>

                                    <option value="">Choose...</option>

                                    <option asp-for="@Users.ADMIN" for="ADMIN" value="@Users.ADMIN">Administrador
                                    </option>
                                    <option asp-for="@Users.PADRAO" for="PADRAO" value="@Users.PADRAO">Padrão</option>

                                </select>

                                <div class="invalid-feedback">
                                    Please provide a valid state.
                                </div>

                            </div>
                        }

                        @if (Context.Session.GetString("login") == null || Context.Session.GetInt32("type") == 1)
                        {
                            <div class="mb-3">

                                <label asp-for="@Model.Tipo" for="@Model.Tipo">Selecione o Nível de Usuário</label>

                                <select class="custom-select d-block w-100" asp-for="@Model.Tipo" for="@Model.Tipo" id="Tipo" required>

                                    <option value="">Choose...</option>
                                    <option asp-for="@Users.PADRAO" for="PADRAO" value="@Users.PADRAO">Padrão</option>

                                </select>

                                <div class="invalid-feedback">
                                    Please provide a valid state.
                                </div>

                            </div>
                        }


                    </div>

                    <input name="Id" type="hidden" asp-for="@Model.Id">

                    <div class=" mt-3">

                        <button class="btn btn-lg btn-outline-primary mr-5 mt-4" type="submit"> Salvar Alterações</button>

                    </div>

                </form>
            
        </div>


    </main>

</body>
