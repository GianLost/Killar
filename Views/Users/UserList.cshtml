@model ICollection<Users>
@{
    ViewData["Title"] = "Listagem De Usuarios Cadastrados";
}

<body class="text-center">

    <main role="main">

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-12 col-sm-4 lista-user">

                    <table class="table table-responsive table-striped table-dark text-justify">

                        <thead>

                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Data de Nascimento</th>
                                <th>Nick WR</th>
                                <th>Nome de Usu√°rio</th>
                                <th>Senha</th>
                                <th>Lane</th>
                                <th>Elo</th>
                                <th>Tipo</th>

                            </tr>

                        </thead>

                        <tbody>

                            @foreach (Users u in Model)
                            {
                                <tr>
                                    <td>@u.Id</td>
                                    <td>@u.Name</td>
                                    <td>@u.BirthDate</td>
                                    <td>@u.LoginWr</td>
                                    <td>@u.LoginName</td>
                                    <td>@u.Password</td>
                                    <td>@u.Lane</td>
                                    <td>@u.Elo</td>
                                    <td>@u.Tipo</td>

                                    <td><a href="/Users/EditarUser?id=@u.Id">Editar</a></td>
                                    <td><a href="/Users/ExcluirUser?id=@u.Id">Excluir</a></td>
                                </tr>
                            }
                        </tbody>

                    </table>

                    <a class="btn btn-lg btn-primary" href="/Users/RegisterUser">Cadastrar um novo usuario</a>

                </div>

            </div>

        </div>

    </main>

</body>
