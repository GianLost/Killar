@model Posts;
@using Microsoft.AspNetCore.Http;
@using System;
@{
    ViewData["Title"] = "Crie Sua Postagem";

    var postDate = DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss");
    var postAuthor = Context.Session.GetString("login");

}

<body class="text-center">

    <main role="main" class="body-post img-fluid">

        <div class="row justify-content-md-center">

            <div class="jumbotron col-md-12 col-lg-12 col-sm-12">

                <div class="">

                    <form id="frmCadastro" asp-controller="Posts" asp-action="RegisterPost" method="post">

                        <p>

                            <input value="@postDate" class="form-control btn-block" type="hidden" name="PostDate" />
                            <input value="@postAuthor" class="form-control btn-block" type="hidden" name="Author" />

                        </p>

                        <p>
                            <textarea class="form-control btn-block post-textarea"
                                placeholder="O que te passas no Rift??" name="Content" cols="40" rows="13"
                                required></textarea>
                        </p>

                        <input type="hidden" name="Id" value="@Model" asp-for="@Model">
                        <input type="hidden" name="UsersId" value=@Context.Session.GetInt32("IdUser") asp-for="@Model">

                        <button class="btn btn-outline-primary btn-lg mt-3 but-post" type="submit">Fa√ßa uma
                            Postagem</button>

                    </form>

                </div>

            </div>

        </div>

    </main>

</body>
